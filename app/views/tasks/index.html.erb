<p id="notice"><%= notice %></p>

<h1>Listing Tasks</h1>

<h2>Expired</h2>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>End</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.order('end asc').each do |task| %>
      <%if task.finished == false && task.end.day < DateTime.now.day %>
      <tr>
        <td><%= task.author %></td>
        <td><%= task.title %></td>
        <td><%= task.end %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
<br>
<h2>Unfinished</h2>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>End</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.order('end asc').each do |task| %>
      <%if task.finished == false && task.end.day >= DateTime.now.day %>
      <tr>
        <td><%= task.author %></td>
        <td><%= task.title %></td>
        <td><%= task.end %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
<br>

<h2>Finished</h2>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>End</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    
    <% @tasks.order('end desc').each do |task| %>
      <%if task.finished %>
        <tr>
          <td><%= task.author %></td>
          <td><%= task.title %></td>
          <td><%= task.end %></td>
          <td><%= link_to 'Show', task %></td>
          <td><%= link_to 'Edit', edit_task_path(task) %></td>
          <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
<%= button_to 'New Task', new_task_path, :class=>"button small", :method => :get %>
